<html>

<head>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <script  src="js/crossword.js"></script>
</head>

<body>


    

    <form>
        <table>
            <tbody id="t">
            <tr id="row0">
                <td id="td0"><input type="text" id="0" pattern="[A-Za-z]{1}" style="color: brown; "></td>
            </tr>
            </tbody>

            <!--<input type="submit" id="finish">-->
        </table>
    </form>
    <button class = "finish">Finish</button>
    <div>

        <!-- Words, hints and what they're linked to. -->
    
        {{#docs}}
                {{number}}: {{hint}}
                <br>
                <button class="cheat">Show Answer</button>
                <p style="display: none;">{{word}}</p>
                <br>
            <br>
        {{/docs}}

        {{#attempts}}
            {{attempts}}
        {{/attempts}}

        <!--Layout related data -->

        {{#rowSize}}
            <p id="rowSize">{{rowSize}}</p>
        {{/rowSize}}
        <p id="layout">{{layoutString}}</p>


            <p id="number">{{numberData}}</p>

    </div>

</body>

</html>